@model IEnumerable<Final_Project_2.Models.Image>
@{
    ViewBag.Title = "Your Images";
}

<h2>@ViewBag.Title</h2>

<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Geolocation</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" style="color:red">
                    YOU HAVE NO IMAGES
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Url.Content(item.ImageLink)" height="100" width="100"/></td>
                    <td>@item.ImageName</td>
                    <td>@item.ImageGeo</td>
                    <td>@item.ImageDesc</td>

                </tr>
            }
        }
    </tbody>
</table>