@model IEnumerable<Final_Project_2.Models.AspNetUser>
@{
    ViewBag.Title = "Friend Requests";
}

<h2>@ViewBag.Title</h2>

<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Friend Requests</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    YOU HAVE NO FRIEND REQUESTS
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@Html.Label("Accept")</td>
                    <td>@Html.Label("Decline")</td>
                </tr>
            }
        }
    </tbody>
</table>